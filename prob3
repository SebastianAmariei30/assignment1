#include <stdio.h>
int main()
{
        int x,mini,maxi;
        printf("Enter 5 numbers:");
        scanf("%d",&x);
        mini=x;
        maxi=x;
        for(int i=1;i<=4;i++)
                {
                scanf("%d",&x);
                if(x<mini)
                        mini=x;
                if(x>maxi)
                        maxi=x;
                }
        printf("The smallest and the largest values of these numbers:%d, %d",mini,maxi);
        return 0;
}
